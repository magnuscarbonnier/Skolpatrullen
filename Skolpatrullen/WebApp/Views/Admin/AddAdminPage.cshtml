@model WebApp.ViewModels.AdminViewModel

@{
    ViewData["Title"] = "Lägg till admin";
}
    <a href="##" onClick="history.go(-1); return false;">Gå tillbaka</a>
<h1>Lägg till admin</h1>

        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddAdminPage">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="SchoolId">Skola</label>
                        @Html.DropDownListFor(model => model.SchoolId, new SelectList(Model.SchoolList, "Id", "Name"), new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label asp-for="UserId">Personnummer</label>
                        @Html.DropDownListFor(model => model.UserId, new SelectList(Model.UserList, "Id", "SocialSecurityNr"), new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Lägg till" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
